{
  "name": "estoque-brasil",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "turbo dev",
    "dev:web": "turbo dev --filter=@estoque-brasil/web",
    "dev:api": "turbo dev --filter=@estoque-brasil/api",
    "dev:mobile": "pnpm --filter @estoque-brasil/mobile start",
    "mobile:android": "pnpm --filter @estoque-brasil/mobile android",
    "mobile:ios": "pnpm --filter @estoque-brasil/mobile ios",
    "build": "turbo build",
    "build:web": "turbo build --filter=@estoque-brasil/web",
    "build:api": "turbo build --filter=@estoque-brasil/api",
    "start": "turbo start",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "clean": "turbo clean && rm -rf node_modules"
  },
  "devDependencies": {
    "turbo": "^2.3.0",
    "typescript": "^5"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=18 <23"
  }
}
